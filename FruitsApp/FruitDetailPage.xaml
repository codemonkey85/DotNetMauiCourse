<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitsApp.FruitDetailPage">

    <Grid RowDefinitions="Auto, Auto, *" Padding="20">
        <Image x:Name="ImgFruit" Grid.Row="0" HeightRequest="500" />
        <Label x:Name="LblFruitName" Grid.Row="1" FontSize="Title" />
        <Label x:Name="LblFruitDescription" Grid.Row="2" FontSize="Subtitle" />
    </Grid>

</ContentPage>
