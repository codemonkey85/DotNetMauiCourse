<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitsApp.MainPage"
             NavigationPage.HasNavigationBar="False">

    <CollectionView x:Name="FruitsList" SelectionChanged="FruitsList_SelectionChanged" SelectionMode="Single">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="20" VerticalItemSpacing="20" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout BackgroundColor="LightGray" Margin="20" Padding="10">
                    <Image HorizontalOptions="Center" Source="{Binding Image}" HeightRequest="60" WidthRequest="60" />
                    <Label HorizontalOptions="Center" Text="{Binding Name}" FontSize="Medium" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
